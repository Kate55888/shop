@model ApplicationName.Domain.Models.Auth.Register

<div class="mb-lg-4 mt-4">
    <h1>Sign up</h1>
</div>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="form-group">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <label asp-for="Email" for="exampleInputEmail1" class="col-sm-2 col-form-label">Email address</label>
        <input asp-for="Email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
        <span asp-validation-for="Email"/>
    </div>
    <div class="form-group">
        <label asp-for="Password" for="exampleInputPassword1" class="col-sm-2 col-form-label">Password</label>
        <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        <span asp-validation-for="Password"/>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword" for="exampleInputPassword1" class="col-sm-2 col-form-label">Repeat Password</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        <span asp-validation-for="ConfirmPassword"/>
    </div>
    <div class="form-group form-check mb-2 mt-2">
        <input type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="form-check-label" for="exampleCheck1">Check me out</label>
    </div>
    <button type="submit" class="btn btn-primary mt-5"><i class="bi-bag-plus-fill"></i>&nbsp;Sign up</button>
    <a asp-controller="Account" asp-action="Login" class="btn btn-primary mt-5" style="width:150px"><i class="bi bi-door-open"></i>&nbsp; Log in</a>
</form>